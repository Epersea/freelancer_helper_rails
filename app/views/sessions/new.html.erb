<div class="w-full"> <% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
  <%= notice %> </p>
<% end %>

<%= form_tag login_path, method: :post do %>

  <h2 class="font-bold text-4xl">Please Log In</h2>

  <div class="my-5">
    <%= label_tag :name, 'Name:' %>
    <%= text_field_tag :name, params[:name], class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

   <div class="my-5">
    <%= label_tag :password, 'Password:' %>
    <%= password_field_tag :password, params[:password], class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= submit_tag "Login", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>


