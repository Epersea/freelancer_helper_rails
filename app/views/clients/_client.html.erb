<div id="<%= dom_id client %>">
  <h3><%= client.name %></h1>
  <div>
    <ul>
      <li>Hours worked: <%= client.hours_worked %></li>
      <li>Amount billed: <%= client.amount_billed %></li>
      <li>Rate per hour: <%= client.rate %></li>
    </ul>
  </div>
  <div>
    <%= link_to "See #{client.name}'s projects", client_projects_path(client), class: "blue-btn", style: "text-decoration: none;" %>
  </div>
</div>