<div id="<%= dom_id user %>">
  <div>
    <strong>Name:</strong>
    <%= user.name %>
  </div>

  <div>
    <strong>Email:</strong>
    <%= user.email %>
  </div>
  <br>
  <div>
    <%= link_to "Edit this user", edit_user_path(user), class: "link" %>
    <%= link_to "Delete user", user_path(user), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "link" %>
  </div>
</div>
