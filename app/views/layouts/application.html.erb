<!DOCTYPE html>
<html>
  <head>
    <title>FhRails</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
    
  <body>
    <div class="flex h-screen">
      <aside class="bg-indigo-800 text-white font-bold text-xl p-6 w-60 inset-y-0 left-0 fixed">
          <nav>
              <% if session[:user_id] %>
                  <%= link_to "Rate Calculator", new_rate_path, class: "block py-2" %>
                  <%= link_to "My Summary", my_summary_index_path, class: "block py-2" %>
                  <%= link_to "My Account", user_path, class: "block py-2" %>
                  <%= link_to "My Clients", clients_path, class: "block py-2" %>
                  <%= button_to 'Logout', session_path, method: :delete, class: "block py-2" %>
              <% else %>
                  <%= link_to "Rate Calculator", new_rate_path, class: "block py-2" %>
                  <%= link_to "Register", new_user_path, class: "block py-2" %>
                  <%= link_to "Login", new_session_path, class: "block py-2" %>
              <% end %>
          </nav>
      </aside>

      <div class="flex-grow p-6">
          <main> 
            <%= yield %>
          </main>
      </div>
  </div>

     
  </body>
</html>
